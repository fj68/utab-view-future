  $primary-color = #20a0ff

  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button
    -webkit-appearance none
    margin 0

  body
    background-color #f5f5f5
  #app-content
    margin 0
    padding 0
    width 100%
    min-height 100vh
  a
    text-decoration none
    color inherit
  main
    max-width 800px
    padding 5%
    padding-top 13vh

    & h1
      margin 0 0 2rem 0

  .el-step__head.is-text.is-process
    background $primary-color
    border-color $primary-color

  .el-step__head.is-text.is-success .el-step__line
    background $primary-color

  .page-header
    display flex
    justify-content space-between
    flex-direction column
    align-items baseline

    & h1
      display inline-block
      flex 1
      margin 0
      padding 0
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      max-width 100%

      & + h3
        display inline-block
        margin 0
        padding 0
        font-size 1rem
        color rgba(0, 0, 0, .54)

  section
    margin-bottom 2rem

  @media (min-width: 600px)
    main
      margin 0 auto
    .page-header
      flex-direction row

      & h1 + h3
        margin-left 1rem
        text-align right
