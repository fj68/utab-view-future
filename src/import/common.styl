.panel
  box-shadow 1px 1px 1px #555
  border-radius 5px
  background #dadada

.legend
  margin 0 0 .5rem
  font-size .8rem
  color $text-color-secondary__dark
  font-family 'Open Sans', sans-serif

i.fa
  width 16px
  height 16px

.button
  box-shadow 1px 1px 1px #555
  border-width 1px 0 0 1px
  border-style solid
  border-color #dadada
  line-height 2rem
  padding 5px 10px
  line-height 2rem
  display flex
  justify-content space-between
  align-items baseline
  min-width 100px
  outer none
  
  &:hover
    cursor pointer
    background $primary-color
    color $text-color-primary__light
    border-color $primary-color
  
  & > .button__text
    flex 1
    
    &:not(:first-child)
      margin-left 5px

a.button
  display inline-block
  text-decoration none

.fg-primary
  color $primary-color

.fg-secondary
  color $secondary-color

.bg-primary
  color $text-color-primary__light
  background $primary-color

.bg-secondary
  color $text-color-primary__light
  background $secondary-color
