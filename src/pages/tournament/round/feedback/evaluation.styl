  .card-container
    display flex
    flex-direction column
    justify-content space-between

    .card
      flex 1
      margin-bottom 2rem

  .card .el-card__header
    background #41a9ad

  .el-card__header
    margin 0
    padding .5rem 1rem
    color #fff
    height auto

    & .card-header-container
      display flex
      justify-content space-between
      align-items baseline

      & .card-title
        flex 1
        margin-right .5rem
        font-size 1rem
        font-weight bold
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

      & .card-subtitle
        font-size 1rem
        text-align right

  .buttons
    display flex
    justify-content space-between
    align-items baseline
    margin-bottom 1rem

    & > *
      flex 1
      margin 0 1rem

      &:first-child
        margin-left 0
        margin-right 1rem
      &:last-child
        margin-left 1rem
        margin-right 0

  .el-form-item
    display flex
    justify-content space-between
    align-items bottom

    & .el-form-item__label
      flex 1
      margin-right 10px
    & .el-form-item__content
      flex 2

  .el-input__inner
    font-family inherit

  @media (min-width: 900px)
    .card-container
      flex-direction column

      .card
        margin-right 1rem
